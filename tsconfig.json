{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["vitest/globals"]
  },
  "include": ["src", "tests", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
